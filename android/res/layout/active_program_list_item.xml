<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <hu.droidium.fitness_app.ProgramProgressView
        android:id="@+id/programProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
	    <TextView
	        android:id="@+id/programNameInActiveProgramList"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/programNamePlaceholder"
	        style="@style/ListItemTitle"/>
	    
	    <TextView
	        android:id="@+id/programStartInActiveProgramList"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:text="@string/programStartedLabel" />

    </LinearLayout>    
</FrameLayout>
