<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/programProgressBarOnProgressDetails"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:progress="50"
        android:layout_height="40dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/programDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder" />
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/nextWorkoutOnProgressDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/programNextWorkoutLabel" />

    <Button
        android:id="@+id/doTodaysWorkoutOnProgressDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/doTodaysWorkout" />

</LinearLayout>
