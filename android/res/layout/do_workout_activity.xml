<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <hu.droidium.fitness_app.WorkoutProgressView
        android:id="@+id/workoutProgress"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="0"
        android:padding="5dp" />

    <include
        android:id="@+id/breakLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        layout="@layout/break_view" />

    <include
        android:id="@+id/exerciseLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        layout="@layout/exercise_view" />

    <include
        android:id="@+id/endOfExerciseLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        layout="@layout/end_of_workout_view" />

</LinearLayout>